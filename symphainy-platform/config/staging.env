# Staging Environment Configuration - Layer 2
# Environment-specific settings for staging

# Environment
ENVIRONMENT=staging

# Database Configuration
DATABASE_HOST=your-staging-db-host
DATABASE_PORT=5432
DATABASE_NAME=symphainy_platform_staging
DATABASE_USER=postgres
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=15
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis Configuration
REDIS_HOST=your-staging-redis-host
REDIS_PORT=6379
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_RELOAD=false
API_WORKERS=2
API_TIMEOUT=30
API_CORS_ORIGINS=https://staging.your-domain.com
API_CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
API_CORS_HEADERS=Content-Type,Authorization

# Security Configuration
JWT_EXPIRATION=3600
JWT_ALGORITHM=HS256
PASSWORD_MIN_LENGTH=10
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# LLM Configuration
LLM_PROVIDER_DEFAULT=openai
LLM_MODEL_DEFAULT=gpt-3.5-turbo
LLM_MAX_TOKENS=1500
LLM_TEMPERATURE=0.5
LLM_TOP_P=0.95
LLM_FREQUENCY_PENALTY=0.05
LLM_PRESENCE_PENALTY=0.05
LLM_TIMEOUT=90
LLM_RETRY_ATTEMPTS=3
LLM_RETRY_DELAY=1

# Multi-tenancy Configuration
MULTI_TENANT_ENABLED=true
DEFAULT_TENANT_TYPE=enterprise
MAX_TENANTS_PER_USER=8
TENANT_ISOLATION_STRICT=true
RLS_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Health Monitoring Configuration
HEALTH_CHECK_INTERVAL=45
HEALTH_CHECK_TIMEOUT=8
HEALTH_CHECK_RETRIES=4

# Governance Configuration
RATE_LIMITING_ENABLED=true
RATE_LIMIT_REQUESTS=500
RATE_LIMIT_WINDOW=3600
COST_MANAGEMENT_ENABLED=true
MAX_DAILY_COST=500.0
AUDIT_LOGGING_ENABLED=true
AUDIT_RETENTION_DAYS=180

# Staging-specific Settings
DEBUG_MODE=false
VERBOSE_LOGGING=true
HOT_RELOAD=false
PROFILING_ENABLED=true

# OPA (Open Policy Agent) Configuration
# For Option C (staging): Managed OPA service URL
# Example: https://opa-staging.your-domain.com
OPA_URL=https://your-staging-opa-service-url
