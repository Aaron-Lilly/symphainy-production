# Testing Environment Configuration - Layer 2
# Environment-specific settings for testing

# Environment
ENVIRONMENT=testing

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=symphainy_platform_test
DATABASE_USER=postgres
DATABASE_POOL_SIZE=2
DATABASE_MAX_OVERFLOW=5
DATABASE_POOL_TIMEOUT=10
DATABASE_POOL_RECYCLE=1800

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1
REDIS_MAX_CONNECTIONS=2
REDIS_SOCKET_TIMEOUT=2
REDIS_SOCKET_CONNECT_TIMEOUT=2

# API Server Configuration
API_HOST=127.0.0.1
API_PORT=8001
API_DEBUG=true
API_RELOAD=false
API_WORKERS=1
API_TIMEOUT=10
API_CORS_ORIGINS=http://localhost:3000
API_CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
API_CORS_HEADERS=Content-Type,Authorization

# Security Configuration
JWT_EXPIRATION=1800
JWT_ALGORITHM=HS256
PASSWORD_MIN_LENGTH=6
PASSWORD_REQUIRE_UPPERCASE=false
PASSWORD_REQUIRE_LOWERCASE=false
PASSWORD_REQUIRE_NUMBERS=false
PASSWORD_REQUIRE_SYMBOLS=false

# LLM Configuration
LLM_PROVIDER_DEFAULT=openai
LLM_MODEL_DEFAULT=gpt-3.5-turbo
LLM_MAX_TOKENS=100
LLM_TEMPERATURE=0.1
LLM_TOP_P=0.8
LLM_FREQUENCY_PENALTY=0.0
LLM_PRESENCE_PENALTY=0.0
LLM_TIMEOUT=30
LLM_RETRY_ATTEMPTS=1
LLM_RETRY_DELAY=0

# Multi-tenancy Configuration
MULTI_TENANT_ENABLED=false
DEFAULT_TENANT_TYPE=individual
MAX_TENANTS_PER_USER=2
TENANT_ISOLATION_STRICT=false
RLS_ENABLED=false

# Logging Configuration
LOG_LEVEL=WARNING
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Health Monitoring Configuration
HEALTH_CHECK_INTERVAL=10
HEALTH_CHECK_TIMEOUT=2
HEALTH_CHECK_RETRIES=1

# Governance Configuration
RATE_LIMITING_ENABLED=false
RATE_LIMIT_REQUESTS=10000
RATE_LIMIT_WINDOW=3600
COST_MANAGEMENT_ENABLED=false
MAX_DAILY_COST=10000.0
AUDIT_LOGGING_ENABLED=false
AUDIT_RETENTION_DAYS=7

# Testing-specific Settings
DEBUG_MODE=true
VERBOSE_LOGGING=false
HOT_RELOAD=false
PROFILING_ENABLED=false
